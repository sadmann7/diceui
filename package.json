{
  "name": "diceui",
  "packageManager": "pnpm@9.15.4",
  "private": true,
  "type": "module",
  "workspaces": ["docs", "packages/*"],
  "scripts": {
    "clean": "rimraf --glob **/node_modules **/dist **/.source **/.turbo **/.next **/pnpm-lock.yaml **/.tsbuildinfo",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:registry": "pnpm --filter=docs build:registry --loglevel silent",
    "build:packages": "pnpm --filter \"@diceui/*\" build",
    "content:generate": "pnpm --filter=docs content:generate",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "typecheck": "turbo typecheck",
    "check": "turbo lint typecheck",
    "test": "turbo run test",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.27.12",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.13.1",
    "@vitejs/plugin-react": "^4.3.4",
    "expect-type": "^1.1.0",
    "jsdom": "^26.0.0",
    "rimraf": "^6.0.1",
    "turbo": "^2.4.0",
    "typescript": "^5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5"
  }
}
