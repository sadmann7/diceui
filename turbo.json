{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", ".nuxt/**", ".source/**"]
    },
    "lint": {
      "cache": false,
      "outputs": []
    },
    "lint:fix": {
      "cache": false,
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "docs#typecheck": {
      "dependsOn": ["^build", "docs#generate:content"],
      "outputs": []
    },
    "generate:content": {
      "outputs": [".source/**"]
    },
    "check": {
      "dependsOn": ["^lint", "^typecheck"],
      "cache": false,
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": false,
      "outputs": []
    }
  }
}
